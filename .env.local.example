# Elasticsearch Configuration
ELASTICSEARCH_URL=https://your-cluster.elastic.co
ELASTICSEARCH_API_KEY=your-elasticsearch-api-key

# Kibana Configuration (base URL only, /api/agent_builder/mcp will be added automatically)
KIBANA_URL=https://your-kibana.elastic.co
AGENT_ID=nba_commentary_assitante

# BallDontLie API Configuration
BALLDONTLIE_API_KEY=your-balldontlie-api-key

# Backend WebSocket Server
PORT=3001

# Anthropic API (for LLM-powered routing)
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# Feature Flags
USE_NBA_MCP_SERVER=true
USE_LLM_ROUTER=false
USE_LLM_ADVANCED_ROUTER=false
USE_SENTIMENT_MCP_SERVER=true

# Sentiment MCP Configuration
TWITTER_SENTIMENT_SERVICE=true
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USERNAME=your-reddit-username
REDDIT_PASSWORD=your-reddit-password
REDDIT_APP_NAME=your-reddit-app-name
SENTIMENT_WINDOW_MINUTES=180
SENTIMENT_MAX_SAMPLES=50
